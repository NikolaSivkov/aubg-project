@model IEnumerable<TNTWebApp.Models.Course>

@{
    ViewData["Title"] = "Index";
}
 
<p>
    <a asp-action="Create" class="btn btn-active">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students)  
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.Count)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Join" asp-route-id="@item.Id">Join</a>
                @if (ViewData["userId"] == item.TeacherId)
        {
            @:| <a class="btn btn-active" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            @:| <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
}

            </td>
        </tr>
        }
    </tbody>
</table>