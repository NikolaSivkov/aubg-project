@model TNTWebApp.Models.Course

@{
    ViewData["Title"] = "Edit";
}

<h1 id="create-course-header">EDIT COURSE</h1>

<hr />

<div class="overlay">
    <div class="row" id="course-sect">
        <div class="col-md-4">
            @using (Html.BeginForm("Edit"))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.HiddenFor(x=>x.CourseId)
                    @Html.HiddenFor(x=>x.TeacherId)
                    @Html.LabelFor(x => x.Subject)
                    @Html.EditorFor(x => x.Subject)
                    @Html.ValidationMessageFor(x => x.Subject)
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-default" id="spec-button" />
                </div>
            }
        </div>
    </div>

@section Scripts {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
}
</div>